<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightBlack</item>
        <item name="colorPrimaryDark">@color/colorCarbonBlack</item>
        <item name="colorAccent">@color/colorMilkWhite</item>
    </style>
    
    <style name="textAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColorHighlight">@color/colorWhite</item>
        <item name="fontFamily">@font/muller_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>